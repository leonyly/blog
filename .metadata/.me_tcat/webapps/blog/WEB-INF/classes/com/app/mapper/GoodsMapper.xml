<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.GoodsDAO"> 
    <select id="getGoodsById"  resultType="Goods">
        select
        * from Goods where `id`=#{id}
    </select>
    <delete id="delete">
		delete from Goods where id=#{id}
	</delete>
    <select id="getGoodsCount" resultType="int">
        select count(id) from Goods
    </select>
    <select id="getAllGoods" resultType="Goods">
        select * from Goods ORDER BY ID DESC
    </select>
      <select id="getOrder" resultType="Goods" parameterType="Goods">
        select * from Goods ORDER BY ${product_name}  DESC 
    </select>
    <select id="search" resultType="Goods">
        select * from Goods where product_name LIKE #{product_name}
    </select>
    <insert id="insert" parameterType="Goods">
        insert into
        Goods(uid,code,product_name,description,thumb,content,category_name,click,category,store,vpath,price,created,updated,status) 
        values(#{uid},#{code},#{product_name},#{description},#{thumb},#{content},#{category_name},#{click},#{category},#{store},#{vpath},#{price},#{created},#{updated},#{status});
    </insert>
        
    <update id="update" parameterType="Goods">
		update Goods set uid=#{uid},code=#{code},product_name=#{product_name},description=#{description},thumb=#{thumb},content=#{content},category_name=#{category_name},click=#{click},category=#{category},store=#{store},vpath=#{vpath},price=#{price},created=#{created},updated=#{updated},status=#{status} where id=#{id}
	</update>
        </mapper>