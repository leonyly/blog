<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.TagsDAO"> 
    <select id="getTagsById"  resultType="Tags">
        select
        * from Tags where `id`=#{id}
    </select>
    <delete id="delete">
		delete from Tags where id=#{id}
	</delete>
    <select id="getTagsCount" resultType="int">
        select count(id) from Tags
    </select>
    <select id="getAllTags" resultType="Tags">
        select * from Tags
    </select>
    <insert id="insert" parameterType="Tags">
        insert into
        Tags(title,created) 
        values(#{title},#{created});
    </insert>
        
    <update id="update" parameterType="Tags">
		update Tags set title=#{title},created=#{created} where id=#{id}
	</update>
        </mapper>