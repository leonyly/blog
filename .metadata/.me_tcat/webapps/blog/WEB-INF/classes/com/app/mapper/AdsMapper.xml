<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.AdsDAO"> 
    <select id="getAdsById"  resultType="Ads">
        select
        * from Ads where `id`=#{id}
    </select>
    <delete id="delete">
		delete from Ads where id=#{id}
	</delete>
    <select id="getAdsCount" resultType="int">
        select count(id) from Ads
    </select>
    <select id="getAllAds" resultType="Ads">
        select * from Ads
    </select>
    <insert id="insert" parameterType="Ads">
        insert into
        Ads(title,url,thumb,created) 
        values(#{title},#{url},#{thumb},#{created});
    </insert>
        
    <update id="update" parameterType="Ads">
		update Ads set title=#{title},url=#{url},thumb=#{thumb},created=#{created} where id=#{id}
	</update>
        </mapper>