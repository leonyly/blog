<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.PhotoDAO"> 
    <select id="getPhotoById"  resultType="Photo">
        select
        * from Photo where `id`=#{id}
    </select>
    <delete id="delete">
		delete from Photo where id=#{id}
	</delete>
    <select id="getPhotoCount" resultType="int">
        select count(id) from Photo
    </select>
    <select id="getAllPhoto" resultType="Photo">
        select * from Photo
    </select>
    <insert id="insert" parameterType="Photo">
        insert into
        Photo(aid,path,uid,created,) 
        values(#{aid},#{path},#{uid},#{created},);
    </insert>
        
    <update id="update" parameterType="Photo">
		update Photo set aid=#{aid},path=#{path},uid=#{uid},created=#{created}, where id=#{id}
	</update>
        </mapper>