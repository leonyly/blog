<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.mapper.CollegeDAO"> 
    <select id="getCollegeById"  resultType="College">
        select
        * from College where `id`=#{id}
    </select>
    <delete id="delete">
		delete from College where id=#{id}
	</delete>
    <select id="getCollegeCount" resultType="int">
        select count(id) from College
    </select>
    <select id="getAllCollege" resultType="College">
        select * from College
    </select>
    <insert id="insert" parameterType="College">
        insert into
        College(collegename,master,created,status) 
        values(#{collegename},#{master},#{created},#{status});
    </insert>
        
    <update id="update" parameterType="College">
		update College set collegename=#{collegename},master=#{master},created=#{created},status=#{status} where id=#{id}
	</update>
        </mapper>